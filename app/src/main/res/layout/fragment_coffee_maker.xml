<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoffeeMakerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/first_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/yellow">

            <TextView
                android:id="@+id/fragment1_output_beans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="total_beans"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/fragment1_output_milk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="total_milk"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/fragment1_output_beans"/>

            <TextView
                android:id="@+id/fragment1_output_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="total_water"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/fragment1_output_milk"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="75dp"
                android:background="@color/light_yellow">

                <TextView
                    android:id="@+id/first_fragment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee Maker"
                    android:textSize="25sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/fragment1_output_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_below="@+id/first_fragment_title"

                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/fragment1_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">

                <RadioButton
                    android:id="@+id/fragment1_radio_espresso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espresso"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/fragment1_radio_cappucino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cappucino"
                    android:textSize="15sp"/>

                <RadioButton
                    android:id="@+id/fragment1_radio_americsno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Americano"
                    android:textSize="15sp"/>

            </RadioGroup>

            <ImageButton
                android:id="@+id/fragment1_make_coffee"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:src="@drawable/make"
                android:layout_marginStart="130dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:contentDescription="test"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/fragment1_input_money_field"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="Put money here"
                android:layout_marginStart="20dp"
                android:inputType="number"/>

            <ImageButton
                android:id="@+id/fragment1_input_money_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/cash"
                android:scaleType="centerInside"
                android:layout_marginStart="59dp"
                android:backgroundTint="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>